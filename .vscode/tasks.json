{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "C/C++: Release",
        "command": "cl.exe",
        "args": [
          "/Ox",
          "/Zi",
          "/EHsc",
          "/std:c++latest",
          "/GS-",
          "/arch:AVX512",
          "/openmp",
          "/I", "${fileDirname}",
          
          "*.cpp",
          "/Fe:",
          "${fileDirname}\\${fileBasenameNoExtension}.exe"
        ],
        "problemMatcher": ["$msCompile"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      },
      {
          "type": "shell",
          "label": "C/C++: Debug",
          "command": "cl.exe",
          "args": [
            "*.cpp",
            "/Od",
            "/Zi",
            "/EHsc",
            "/std:c++latest",
            "/I", "${fileDirname}",
            "/GS-",
            "/arch:AVX512",
            "/Fe:",
            "${fileDirname}\\${fileBasenameNoExtension}.exe"
          ],
          "problemMatcher": {
            "base": "$msCompile",
            "fileLocation": ["search"]
          },
          "group": {
            "kind": "build",
            "isDefault": true
          },
          "detail": "Task generated by Debugger."
        }
    ]
  }
  